<script type="text/javascript">
    $(function () {
        $("input:checkbox[name=batch]").prop("checked", false);

        RejectedClaimIndexPageLoad();

        $("input:checkbox[name=all]").change(function () {
            if (this.checked) {
                $("input:checkbox[name=batch]").prop("checked", true);
            } else {
                $("input:checkbox[name=batch]").prop("checked", false);
            }
        });
	});
</script>

