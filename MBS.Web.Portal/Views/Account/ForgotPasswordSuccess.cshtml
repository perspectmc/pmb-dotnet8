<pages enableViewState="false" buffer="true"></pages>

@model MBS.Web.Portal.Models.ForgotPasswordModel

@{
    ViewBag.Title = "Forgot Password";
}

<div class="panel panel-warning">
    <div class="panel-heading">
        <h3 class="panel-title">@ViewBag.Title</h3>
    </div>
    <div class="panel-body">
        <button class="btn btn-sm control_buttons" onclick="window.location.href='@Url.Action("Login", "Account")';">
            <img src="@Url.Content("~/Content/images/icon_back.png")" title="Back to Login" />
            <span>Back to Login</span>
        </button>
        <p>
            <div style="height:20px;"></div>
            <div class="alert alert-info">A link has been sent to your registered email to reset your password. The link will expire in 10 minutes. Please check your junk emails! If you do not receive it within 30 minutes contact <a href="mailto: info@perspect.ca">info@perspect.ca</a></div>        
        </p>
    </div>
</div>
